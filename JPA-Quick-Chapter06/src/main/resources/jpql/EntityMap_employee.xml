<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_1.xsd"
        version="2.1">

    <named-query name="Employee.searchById">
        <query>
            <![CDATA[
            SELECT e
              FROM Employee e
             WHERE e.id = :searchKeyword
            ]]>
        </query>
    </named-query>

    <named-query name="Employee.searchByName">
        <query>
            <![CDATA[
            SELECT e
              FROM Employee e
             WHERE e.name LIKE :searchName
            ]]>
        </query>
    </named-query>
</entity-mappings>

